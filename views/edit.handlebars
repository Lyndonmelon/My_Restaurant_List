<div class="m-5">
    <h1>新增餐廳</h1>
    <form action="/restaurants/{{restaurant._id}}/edit?_method=PUT" method="post" class="mt-3">
        <div class="mb-3">
            <label for="name" class="form-label">餐廳名稱</label>
            <input type="text" name="name" class="form-control" id="name" aria-describedby="name" value="{{restaurant.name}}" required>
        </div>
        <div class="mb-3">
            <label for="name_en" class="form-label">餐廳英文名稱</label>
            <input type="text" name="name_en" class="form-control" id="name_en" value="{{restaurant.name_en}}">
        </div>
        <div class="mb-3">
            <label for="category" class="form-label">料理類別</label>
            <input type="text" name="category" class="form-control" id="category" value="{{restaurant.category}}" required>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">圖片(URL)</label>
            <input type="text" name="image" class="form-control" id="image" value="{{restaurant.image}}">
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">地點</label>
            <input type="text" name="location" class="form-control" id="location" value="{{restaurant.location}}" required>
        </div>
        <div class="mb-3">
            <label for="phone" class="form-label">電話</label>
            <input type="tel" name="phone" class="form-control" id="phone" value="{{restaurant.phone}}">
        </div>
        <div class="mb-3">
            <label for="google_map" class="form-label">Google Map</label>
            <input type="text" name="google_map" class="form-control" id="google_map" value="{{restaurant.google_map}}">
        </div>
        <div class="mb-3">
            <label for="rating" class="form-label">評分</label>
            <input type="number" name="rating" class="form-control" id="rating" min="0" max="5" step="0.1" value="{{restaurant.rating}}" required>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">詳細資料</label>
            <textarea name="description" id="description" cols="155" rows="5" >
                {{restaurant.description}}
            </textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>